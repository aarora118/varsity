{
  "manifest_version": 3,
  "name": "Varsity Tutors Learning Concierge",
  "version": "1.0",
  "description": "An AI-powered chatbot to create personalized learning plans and find the perfect tutor on Varsity Tutors.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.varsitytutors.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.varsitytutors.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chatbot.html"],
      "matches": ["https://www.varsitytutors.com/*"]
    }
  ]
} 